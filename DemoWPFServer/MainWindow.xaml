<Window x:Class="DemoWPFServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DemoWPFServer"
        Title="Demo Server" Height="250" Width="250">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="MediumSpringGreen">
            <Button Content="{Binding ButtonAction}" Command="{Binding StartStopCommand}" Width="100"/>
            <Label Content="Port"/>
            <TextBox Text="{Binding PortNumber, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Background="Aquamarine">
            <Label Content="Directory"/>
            <TextBox Text="{Binding Directory}"/>
        </StackPanel>
        
        <ScrollViewer Grid.Row="2">
            <TextBlock Text="{Binding TextFeedback}" TextWrapping="Wrap" Background="Azure"/>
        </ScrollViewer>
        
    </Grid>
</Window>
